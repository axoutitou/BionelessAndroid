<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/textViewDescr"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <RadioGroup
            android:id="@+id/activityType"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <RadioButton
                android:id="@+id/marcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Marcher" />

            <RadioButton
                android:id="@+id/courir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Courir" />

            <RadioButton
                android:id="@+id/immobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Immobile" />

            <RadioButton
                android:id="@+id/monterMarches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monter des marches" />

            <RadioButton
                android:id="@+id/descendreMarches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descendre des marches" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50px"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="300px"
            android:orientation="vertical"
            android:weightSum="7">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:text="Veuillez renseigner votre identifiant" />

            <EditText
                android:id="@+id/userId"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonStartSensors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:onClick="onStartClick"
            android:text="@string/startButton" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>